<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white sticky-top">
        <a class="navbar-brand ml-5" href="/home"><img src="/images/logo.png" style="width:80%; height:70%"></a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/home">Dashboard<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/ranklist">Ranklist</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/recent">Recent</a>
                </li>
            </ul>
            {{#if curuser}}
            <ul class="navbar-nav mr-5">
                <li class="nav-item dropdown my-auto">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span><i class="fa fa-user"></i></span>
                        {{curuser.username}}
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="/profile/{{curuser.username}}"
                            value="{{curuser.username}}">Profile</a>
                        <a class="dropdown-item" href="/logout">Logout</a>
                    </div>
                </li>
            </ul>
            {{else}}
            <ul class="navbar-nav mr-4">
                <li class="nav-item dropdown my-auto"><a href="/enter">Login</a></li>
                <li class="nav-item dropdown my-auto"><a href="/enter">Register</a></li>
            </ul>
            {{/if}}
        </div>
    </nav>
    <form action="/home" method="post" id="gototag">
        <div class="container mt-4">
            <div class="container">
                <h3 class="text-center">Skills Available For Practice</h3>
                <hr class="colored">
                <div class="row mb-3">
                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                        <div class="card shadow-lg p-2 bg-white rounded mt-3">
                            <div class="card-body card-design">
                                <div class="row">
                                    <div class="col-lg-12 col-xl-12 text-center">
                                        {{#if curuser}}
                                        <h3 class="card-title">C ({{curuser.csolvecount}}/{{counter.ccnt}})</h3>
                                        <div class="progress text-center">
                                            <div class="progress-bar" role="progressbar"
                                                style="width:{{math curuser.csolvecount "x" counter.ccnt}}%"
                                                aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
                                            </div>
                                        </div>
                                        {{else}}
                                        <h3 class="card-title">C (0/{{counter.ccnt}})</h3>
                                        <div class="progress text-center">
                                            <div class="progress-bar" role="progressbar" style="width:0%"
                                                aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
                                            </div>
                                        </div>
                                        {{/if}}
                                        <button type="submit" name="submit" value="c"
                                            class="btn btn-outline-primary btn-block btn-border mt-2"
                                            id="btn-solve">Practice</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                        <div class="card shadow-lg p-2 bg-white rounded mt-3">
